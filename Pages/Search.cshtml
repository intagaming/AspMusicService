@page
@model MusicService.Pages.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

@foreach (var item in Model.Song) {
    <div class="p-4 cursor-pointer" onclick="window.location.href='/Song?id=@item.ID';">
        <h3>@item.Name</h3>
        <p>@String.Join(",", item.Artists)</p>
    </div>
}
